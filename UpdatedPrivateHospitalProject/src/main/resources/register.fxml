<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.magan_korhaz.private_hospital.RegisterController" spacing="10" alignment="CENTER">
    <TextField fx:id="regEmailField" promptText="Email"/>
    <PasswordField fx:id="regPasswordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    <Button text="Register" onAction="#handleRegister"/>
    <Button text="Back to Login" onAction="#switchToLogin"/>
</VBox>
