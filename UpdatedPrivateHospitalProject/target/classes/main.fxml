<?import java.lang.classfile.Label?>
<?import java.awt.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magan_korhaz.private_hospital.MainController" style="-fx-background-color: lightblue;">
    <VBox spacing="10" layoutX="10.0" layoutY="10.0">
        <Button fx:id="homeButton" text="Kezdőlap" />
        <Button fx:id="aboutButton" text="Rólunk" />
        <Button fx:id="servicesButton" text="Szolgáltatásaink" />
        <Button fx:id="contactButton" text="Kapcsolat" />
        <Button fx:id="registerButton" layoutX="10.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleRegister" text="Regisztráció" />
    </VBox>
    <Label fx:id="titleLabel" layoutX="200.0" layoutY="10.0" text="EgészségMagánKórház" />
    <Label fx:id="specializationLabel" layoutX="10.0" layoutY="50.0" text="Válasszon szakterületet:" />
    <ComboBox fx:id="specializationComboBox" layoutX="200.0" layoutY="50.0" />
    <Label fx:id="doctorLabel" layoutX="10.0" layoutY="100.0" text="Válasszon orvost:" />
    <ListView fx:id="doctorListView" layoutX="200.0" layoutY="100.0" />
    <Label fx:id="dateLabel" layoutX="10.0" layoutY="200.0" text="Válasszon dátumot:" />
    <DatePicker fx:id="datePicker" layoutX="200.0" layoutY="200.0" />
    <Label fx:id="availableTimesLabel" layoutX="10.0" layoutY="250.0" text="Elérhető időpontok:" />
    <ListView fx:id="timeListView" layoutX="200.0" layoutY="250.0" />
    <Button fx:id="bookAppointmentButton" layoutX="400.0" layoutY="250.0" text="Időpontfoglalás" />
    <ImageView fx:id="doctorImage" layoutX="200.0" layoutY="350.0" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
</AnchorPane>
