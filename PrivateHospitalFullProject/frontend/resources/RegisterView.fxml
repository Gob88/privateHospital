<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="10">
    <Label text="Register" styleClass="header"/>
    <TextField fx:id="usernameField" promptText="Username" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <Button text="Register" onAction="#handleRegister" maxWidth="150"/>
    <Button text="Back to Login" onAction="#goToLogin" maxWidth="150"/>
</VBox>
